  <recipe name="Alloy: Dark Steel 3" required="true">
    <alloying energy="20000" exp="0.5">
      <input name="ingotIron"/>
      <input name="oredict:dustObsidian"/>
      <input name="quark:black_ash"/>
      <output name="ingotDarkSteel"/>
    </alloying>
  </recipe>

  <recipe name="Alloy: Soularium" required="true">
    <alloying energy="10000" exp="0.7">
      <input name="minecraft:soul_sand"/><!-- has no oredict entry -->
      <input name="ingotGold"/>
      <output name="ingotSoularium"/>
    </alloying>
  </recipe>

  <recipe name="Alloy: Soularium 2" required="true">
    <alloying energy="10000" exp="0.7">
      <input name="minecraft:soul_sand"/><!-- has no oredict entry -->
      <input name="ingotSilver"/>
      <output name="ingotSoularium"/>
    </alloying>
  </recipe>
  
  <recipe name="Alloy: Bronze (Thermal Expansion)" required="false">
    <alloying energy="4000" exp="0">
      <input name="ingotCopper" amount="3"/>
      <input name="ingotTin"/>
      <output name="contenttweaker:material_part:94" amount="4"/>
    </alloying>
  </recipe>
  
  <recipe name="Alloy: Brass" required="false">
    <alloying energy="4000" exp="0">
      <input name="ingotCopper" amount="2"/>
      <input name="ingotZinc"/>
      <output name="contenttweaker:material_part:88" amount="4"/>
    </alloying>
  </recipe>
  
  <recipe name="Alloy: Gunmetal" required="false">
    <alloying energy="4000" exp="0">
      <input name="ingotBronze" amount="3"/>
      <input name="ingotBrass" amount="2"/>
      <output name="contenttweaker:material_part:173" amount="5"/>
    </alloying>
  </recipe>
  
  <recipe name="Alloy: Modularium" required="false">
    <alloying energy="4000" exp="0">
      <input name="dustRedstone" amount="1"/>
      <input name="ingotBrass" amount="1"/>
      <output name="modularmachinery:itemmodularium" amount="1"/>
    </alloying>
  </recipe>
</enderio:recipes>
